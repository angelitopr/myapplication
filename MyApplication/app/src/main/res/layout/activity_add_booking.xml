<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddBooking">

    <TextView
        android:id="@+id/eventIDLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event ID:"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/eventIDEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventIDLabel"
        android:hint="Enter event ID"
        android:inputType="text"/>

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textSize="16sp"
        android:layout_below="@id/eventIDEditText"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLabel"
        android:hint="Enter title"
        android:inputType="text"/>

    <TextView
        android:id="@+id/genreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre:"
        android:textSize="16sp"
        android:layout_below="@id/titleEditText"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/genreEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/genreLabel"
        android:hint="Enter genre"
        android:inputType="text"/>

    <Button
        android:id="@+id/addBookingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Booking"
        android:layout_below="@id/genreEditText"
        android:layout_marginTop="24dp"/>

</RelativeLayout>
